model EmailValidation {
  id        String   @id @default(uuid(7))
  email     String   @unique
  code      String
  expiresAt DateTime
  verified  Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt @default(now())

  @@index([email])
  @@index([createdAt])
  @@map("email_validations")
}