model Comment {
    id         String   @id @default(uuid(7))
    content    String
    authorId   String
    questionId String?
    answerId   String?
    createdAt  DateTime @default(now())
    updatedAt  DateTime? @updatedAt

    author User @relation(fields: [authorId], references: [id])

    @@index([questionId])
    @@index([answerId])
    @@index([authorId])
    @@index([createdAt])
    @@index([questionId, createdAt])
    @@index([answerId, createdAt])
}
