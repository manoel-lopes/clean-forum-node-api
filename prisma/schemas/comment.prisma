model Comment {
    id         String   @id
    content    String
    authorId   String
    questionId String?
    answerId   String?
    createdAt  DateTime
    updatedAt  DateTime?

    author User @relation(fields: [authorId], references: [id])

    @@index([questionId])
    @@index([answerId])
    @@index([authorId])
    @@index([createdAt])
    @@index([questionId, createdAt])
    @@index([answerId, createdAt])
}
