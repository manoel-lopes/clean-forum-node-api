model Question {
    id           String   @id @default(uuid(7))
    title        String
    slug         String   @unique
    content      String
    authorId     String
    bestAnswerId String?
    createdAt    DateTime @default(now())
    updatedAt    DateTime @updatedAt @default(now())

    author User @relation(fields: [authorId], references: [id])
    answers Answer[]

    @@index([authorId])
    @@index([createdAt])
    @@index([slug])
    @@map("questions")
}
