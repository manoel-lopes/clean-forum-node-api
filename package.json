{
  "name": "clean-forum-node-api",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "start": "NODE_ENV=production node --env-file .env dist/main/server.js",
    "start:dev": "tsx --env-file .env.development --watch src/main/server.ts",
    "build": "tsup",
    "migrate": "dotenv -e .env -- prisma migrate dev",
    "migrate:dev": "dotenv -e .env.development -- prisma migrate dev",
    "migrate:test": "dotenv -e .env.test -- prisma migrate dev",
    "migrate:reset": "dotenv -e .env -- prisma migrate reset",
    "migrate:reset:dev": "dotenv -e .env.development -- prisma migrate reset",
    "migrate:reset:test": "dotenv -e .env.test -- prisma migrate reset",
    "check-types": "tsc --noEmit",
    "lint": "eslint src tests --ext .ts,.tsx --fix",
    "lint-staged": "lint-staged --config .lintstagedrc.mjs",
    "test:unit": "dotenv -e .env.test -- vitest --run --passWithNoTests --silent --reporter verbose --dir src",
    "test:unit:watch": "dotenv -e .env.test -- vitest --passWithNoTests --silent --reporter verbose --dir src",
    "test:e2e": "dotenv -e .env.test -- vitest --run --passWithNoTests --reporter verbose --dir tests/e2e",
    "test:e2e:watch": "dotenv -e .env.test -- vitest --passWithNoTests --reporter verbose --dir tests/e2e",
    "test:staged": "vitest related --run",
    "test:ci": "vitest --run --silent --coverage",
    "test:dir": "vitest --run --silent --reporter verbose --dir",
    "test:mutation": "stryker run && rm -rf .stryker-tmp",
    "db:seed": "prisma db seed",
    "db:up:dev": "dotenv -e .env.development -- docker-compose -p forum_dev -f docker-compose.development.yml up --build -d",
    "db:up:test": "DB_PORT=5433 REDIS_PORT=6377 docker-compose --env-file .env.test -p forum_test -f docker-compose.test.yml up --build -d",
    "prepare": "husky"
  },
  "prisma": {
    "schema": "./prisma",
    "seed": "./src/infra/persistence/seed.ts"
  },
  "dependencies": {
    "@bull-board/api": "^6.14.2",
    "@bull-board/fastify": "^6.14.2",
    "@dotenvx/dotenvx": "^1.51.1",
    "@fastify/cors": "^11.1.0",
    "@fastify/rate-limit": "^10.3.0",
    "@fastify/redis": "^7.1.0",
    "@fastify/static": "^8.3.0",
    "@fastify/swagger": "^9.6.1",
    "@fastify/swagger-ui": "^5.2.3",
    "@prisma/adapter-pg": "^7.0.0",
    "@prisma/client": "7.0.0",
    "bcrypt": "^6.0.0",
    "bullmq": "^5.64.0",
    "fastify": "^5.6.2",
    "fastify-mailer": "^2.3.1",
    "fastify-plugin": "^5.1.0",
    "fastify-type-provider-zod": "6.1.0",
    "handlebars": "^4.7.8",
    "ioredis": "5.8.2",
    "jsonwebtoken": "^9.0.2",
    "nodemailer": "^7.0.10",
    "nodemailer-express-handlebars": "^7.0.0",
    "pg": "^8.16.3",
    "pino": "^10.1.0",
    "tsx": "4.20.6",
    "uuid": "^13.0.0",
    "uuidv7": "1.0.2",
    "vitest-environment-prisma": "link:prisma/vitest-environment-prisma",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@eslint/js": "9.39.1",
    "@faker-js/faker": "^10.1.0",
    "@stryker-mutator/core": "^9.3.0",
    "@stryker-mutator/vitest-runner": "^9.3.0",
    "@total-typescript/ts-reset": "0.6.1",
    "@types/bcrypt": "^6.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "24.10.1",
    "@types/nodemailer": "^7.0.4",
    "@types/pg": "^8.15.6",
    "@types/supertest": "6.0.3",
    "@vitest/coverage-istanbul": "4.0.12",
    "@vitest/eslint-plugin": "1.4.3",
    "axios": "^1.13.2",
    "dotenv": "^17.2.3",
    "dotenv-cli": "^11.0.0",
    "eslint": "9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-unused-imports": "^4.3.0",
    "husky": "9.1.7",
    "lint-staged": "16.2.7",
    "neostandard": "0.12.2",
    "pino-pretty": "^13.1.2",
    "prettier": "^3.6.2",
    "prisma": "7.0.0",
    "supertest": "7.1.4",
    "tsup": "8.5.1",
    "typescript": "5.9.3",
    "typescript-eslint": "8.47.0",
    "vite": "7.2.4",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "4.0.12"
  }
}