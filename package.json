{
  "name": "clean-forum-node-api",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "start": "NODE_ENV=production node --env-file .env dist/main/server.js",
    "start:dev": "tsx --env-file .env.development --watch src/main/server.ts",
    "build": "tsup",
    "migrate": "dotenv -e .env -- prisma migrate dev",
    "migrate:dev": "dotenv -e .env.development -- prisma migrate dev",
    "migrate:test": "dotenv -e .env.test -- prisma migrate dev",
    "migrate:reset": "dotenv -e .env -- prisma migrate reset",
    "migrate:reset:dev": "dotenv -e .env.development -- prisma migrate reset",
    "migrate:reset:test": "dotenv -e .env.test -- prisma migrate reset",
    "check-types": "tsc --noEmit",
    "lint": "eslint src --ext .ts,.tsx --fix",
    "lint-staged": "lint-staged --config .lintstagedrc.mjs",
    "test:unit": "dotenv -e .env.test -- vitest --run --passWithNoTests --silent --reporter verbose",
    "test:unit:watch": "vitest --passWithNoTests --silent --reporter verbose",
    "test:e2e": "dotenv -e .env.test -- vitest --run --passWithNoTests --reporter verbose --dir src/main",
    "test:e2e:watch": "dotenv -e .env.test -- vitest --passWithNoTests --reporter verbose --dir src/main",
    "test:int": "vitest --run --passWithNoTests --pool=forks --silent --reporter verbose --dir src/main",
    "test:staged": "vitest related --run",
    "test:ci": "vitest --run --silent --coverage",
    "test:dir": "vitest --run --silent --reporter verbose --dir",
    "db:seed": "prisma db seed",
    "test:mutation": "stryker run && rm -rf .stryker-tmp",
    "db:up:dev": "dotenv -e .env.development -- docker-compose -p forum_dev -f docker-compose.development.yml up --build -d",
    "db:up:test": "dotenv -e .env.test -- docker-compose -p forum_test -f docker-compose.test.yml up --build -d",
    "prepare": "husky"
  },
  "prisma": {
    "schema": "./prisma",
    "seed": "./src/infra/persistence/seed/seed.ts"
  },
  "dependencies": {
    "@fastify/cors": "^11.1.0",
    "@fastify/swagger": "^9.5.1",
    "@fastify/swagger-ui": "^5.2.3",
    "@prisma/client": "6.13.0",
    "dotenv-cli": "10.0.0",
    "fastify": "^5.4.0",
    "fastify-type-provider-zod": "5.0.2",
    "ioredis": "5.7.0",
    "jsonwebtoken": "^9.0.2",
    "tsx": "4.20.3",
    "uuidv7": "1.0.2",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@eslint/js": "9.32.0",
    "@faker-js/faker": "^9.9.0",
    "@stryker-mutator/core": "^9.0.1",
    "@stryker-mutator/vitest-runner": "^9.0.1",
    "@total-typescript/ts-reset": "0.6.1",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "24.2.0",
    "@types/supertest": "6.0.3",
    "@vitest/coverage-istanbul": "3.2.4",
    "@vitest/eslint-plugin": "1.3.4",
    "eslint": "9.32.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-unused-imports": "^4.1.4",
    "husky": "9.1.7",
    "lint-staged": "16.1.4",
    "neostandard": "0.12.2",
    "prisma": "6.13.0",
    "supertest": "7.1.4",
    "tsup": "8.5.0",
    "typescript": "5.9.2",
    "typescript-eslint": "8.39.0",
    "vite": "7.0.6",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "3.2.4"
  }
}
